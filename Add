.MODEL SMALL           ; DEFINES MEMORY MODEL AS SMALL
.STACK 100H           ; SETS UP STACK SEGMENT OF SIZE 100H BYTES

.DATA                 ; START OF DATA SEGMENT
A DB "ENTER THE FIRST NUMBER: $"    ; FIRST PROMPT STRING
B DB "ENTER THE SECOND NUMBER: $"   ; SECOND PROMPT STRING
C DB "RESULT: $"                    ; RESULT PROMPT STRING

.CODE                 ; START OF CODE SEGMENT
MAIN PROC            ; MAIN PROCEDURE BEGINS

MOV AX,@DATA         ; INITIALIZE DATA SEGMENT
MOV DS,AX           ; MOVE DATA SEGMENT ADDRESS TO DS REGISTER

MOV AH,9            ; FUNCTION 9 FOR STRING OUTPUT
LEA DX,A            ; LOAD ADDRESS OF FIRST PROMPT
INT 21H            ; DOS INTERRUPT TO DISPLAY STRING

MOV AH,1            ; FUNCTION 1 FOR CHARACTER INPUT
INT 21H            ; GET FIRST NUMBER FROM USER
MOV BL,AL          ; STORE FIRST NUMBER IN BL

MOV AH,2            ; FUNCTION 2 FOR CHARACTER OUTPUT
MOV DL,10           ; LOAD NEWLINE CHARACTER
INT 21H            ; PRINT NEWLINE
MOV DL,13          ; LOAD CARRIAGE RETURN
INT 21H            ; PRINT CARRIAGE RETURN

MOV AH,9            ; FUNCTION 9 FOR STRING OUTPUT
LEA DX,B            ; LOAD ADDRESS OF SECOND PROMPT
INT 21H            ; DISPLAY SECOND PROMPT

MOV AH,1            ; FUNCTION 1 FOR CHARACTER INPUT
INT 21H            ; GET SECOND NUMBER FROM USER
MOV BH,AL          ; STORE SECOND NUMBER IN BH

MOV AH,2            ; FUNCTION 2 FOR CHARACTER OUTPUT
MOV DL,10           ; LOAD NEWLINE CHARACTER
INT 21H            ; PRINT NEWLINE
MOV DL,13          ; LOAD CARRIAGE RETURN
INT 21H            ; PRINT CARRIAGE RETURN

MOV AH,9            ; FUNCTION 9 FOR STRING OUTPUT
LEA DX,C            ; LOAD ADDRESS OF RESULT PROMPT
INT 21H            ; DISPLAY RESULT PROMPT

ADD BL,BH           ; ADD THE TWO NUMBERS
SUB BL,48           ; CONVERT FROM ASCII TO NUMBER
MOV DL,BL           ; MOVE RESULT TO DL FOR DISPLAY
MOV AH,2            ; FUNCTION 2 FOR CHARACTER OUTPUT
INT 21H            ; DISPLAY RESULT

MOV AH,4CH          ; FUNCTION 4CH TO TERMINATE PROGRAM
INT 21H            ; DOS INTERRUPT TO END PROGRAM

MAIN ENDP           ; END OF MAIN PROCEDURE
END MAIN            ; END OF PROGRAM
